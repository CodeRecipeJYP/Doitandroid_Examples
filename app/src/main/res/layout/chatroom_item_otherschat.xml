<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <!--android:background="#8800"-->
    <ImageButton
        android:id="@+id/chatitem_imgbtn_photo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/chatitem_tv_name"
        />
    <TextView
        android:id="@+id/chatitem_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        tools:text="sample name"
        app:layout_constraintTop_toTopOf="@+id/chatitem_imgbtn_photo"
        app:layout_constraintLeft_toRightOf="@+id/chatitem_imgbtn_photo"
        />
    <TextView
        android:id="@+id/chatitem_tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:minHeight="40dp"
        android:gravity="start|left"
        tools:text="chat message"
        app:layout_constraintTop_toBottomOf="@+id/chatitem_tv_name"
        app:layout_constraintLeft_toRightOf="@id/chatitem_imgbtn_photo"
        android:background="#fafafa"
        />


    <!--<android.support.v7.widget.RecyclerView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--&gt;-->
    <!--</android.support.v7.widget.RecyclerView>-->

</android.support.constraint.ConstraintLayout>