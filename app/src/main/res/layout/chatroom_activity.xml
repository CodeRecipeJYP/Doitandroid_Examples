<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.asuscomm.yangyinetwork.doitandroid_examples.ui.main.activities.ChatRoomActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/chatroom_recyclerview_chatlist"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:listitem="@layout/chatroom_item_chat"
        android:background="#8800"
        >
    </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:id="@+id/chatroom_inputbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#34000000"
        >
        <Button
            android:id="@+id/chatroom_inputbar_btn_add"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:drawable/ic_input_add"
            />
        <EditText
            android:id="@+id/chatroom_inputbar_et_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00ffffff"
            />
    </LinearLayout>
</LinearLayout>
